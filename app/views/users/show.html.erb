<main>
  <div class="container">
    <div class="row">
      <div class=col-md-3>
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(current_user.id) %>"><i class="fa-solid fa-user-gear"></i></a>
        </div>

        <h2>New book</h2>
        <%=form_with model: @book, url: '/books', method: :post do |f| %>
          <h4>title</h4>
          <%= f.text_field :title %>
          <h4>opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class: 'btn btn-success'%>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= image_tag @user.get_profile_image(100,100) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</main>