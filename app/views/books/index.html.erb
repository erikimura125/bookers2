<main>
  <div class="container">
    <div class="row">
      <div class=col-md-3>
        <h2>User info</h2>
        <h1>New book</h1>
        <%=form_with model: @book, url: '/books', method: :post do |f| %>
          <h4>title</h4>
          <%= f.text_field :title %>
          <h4>opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
</div>
</div>
</main>