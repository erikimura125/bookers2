<main>
  <div>
    <%= flash[:notice] %>
  </div>
  <div class="container">
    <div class="row">
      <%= render "side", user: @user, book: @book_new %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= image_tag @book.user.get_profile_image(100,100) %>
              <br><%= link_to @book.user.name, user_path(@book.user.id) %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><a class="btn btn-sm btn-success" href="<%= edit_book_path(@book.id) %>">Edit</a></td>
                <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger" rel="nofollow" data-method="delete" href="<%= book_path(@book.id)%>">Destroy</a></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>